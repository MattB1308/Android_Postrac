<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background_rounded"
    android:padding="24dp">

    <!-- Header with Reset Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <!-- Animated Reset Icon -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp">

            <!-- Background circle with rotation animation -->
            <View
                android:id="@+id/resetRotateBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_sepex_red_light"
                android:alpha="0.3" />

            <!-- Main icon background -->
            <View
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_sepex_red_light"
                android:alpha="0.8" />

            <!-- Reset icon (using warning as it's a destructive action) -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_warning"
                app:tint="@color/sepex_red" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Form"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <!-- Warning Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to reset all data?"
            android:textSize="16sp"
            android:textColor="@color/on_surface_variant"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="4dp" />

        <!-- Data Loss Warning -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This will clear all photos and barcode data"
            android:textSize="14sp"
            android:textColor="@color/sepex_red"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textStyle="italic" />

    </LinearLayout>

    <!-- Data Summary Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="@color/surface_variant"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/sepex_red"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data to be cleared:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="• Scanned barcode"
                    android:textSize="13sp"
                    android:textColor="@color/on_surface_variant"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvBarcodeStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:textSize="13sp"
                    android:textColor="@color/sepex_blue"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="• Captured photos"
                    android:textSize="13sp"
                    android:textColor="@color/on_surface_variant"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvPhotoCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="13sp"
                    android:textColor="@color/sepex_blue"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/on_surface_variant"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/surface_variant"
            app:cornerRadius="10dp"
            app:elevation="2dp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Reset Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Reset All"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/sepex_red"
            app:cornerRadius="10dp"
            app:elevation="4dp"
            app:icon="@drawable/ic_warning"
            app:iconGravity="textStart"
            app:iconPadding="6dp"
            app:iconTint="@color/white"
            android:layout_marginStart="8dp"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</LinearLayout>