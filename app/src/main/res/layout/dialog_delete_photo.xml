<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background_rounded"
    android:padding="24dp">

    <!-- Header with Warning Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <!-- Warning Icon with animated background -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp">

            <!-- Background circle with warning color -->
            <View
                android:id="@+id/warningPulseBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_sepex_red_light"
                android:alpha="0.3" />

            <!-- Main icon background -->
            <View
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_sepex_red_light"
                android:alpha="0.8" />

            <!-- Warning icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_warning"
                app:tint="@color/sepex_red" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Photo"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <!-- Warning Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to delete this photo?"
            android:textSize="16sp"
            android:textColor="@color/on_surface_variant"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="4dp" />

        <!-- Secondary Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This action cannot be undone"
            android:textSize="14sp"
            android:textColor="@color/sepex_red"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textStyle="italic" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/on_surface_variant"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/surface_variant"
            app:cornerRadius="10dp"
            app:elevation="2dp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Delete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/sepex_red"
            app:cornerRadius="10dp"
            app:elevation="4dp"
            app:icon="@drawable/ic_close"
            app:iconGravity="textStart"
            app:iconPadding="6dp"
            app:iconTint="@color/white"
            android:layout_marginStart="8dp"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</LinearLayout>