<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background_rounded"
    android:padding="24dp">

    <!-- Header with Animation Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <!-- Animated Location Icon -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp">

            <!-- Background circle with pulse animation -->
            <View
                android:id="@+id/pulseBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_sepex_blue_light"
                android:alpha="0.3" />

            <!-- Main icon background -->
            <View
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_sepex_blue_light"
                android:alpha="0.8" />

            <!-- Location icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_dialog_map"
                app:tint="@color/sepex_blue" />

        </FrameLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrival Confirmation"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <!-- Destination name -->
        <TextView
            android:id="@+id/tvDestinationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination Name"
            android:textSize="16sp"
            android:textColor="@color/sepex_blue"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have you arrived at your destination?"
            android:textSize="14sp"
            android:textColor="@color/on_surface_variant"
            android:textAlignment="center"
            android:fontFamily="sans-serif" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <!-- Primary Action: Yes, I've arrived -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnArrived"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Yes, I've arrived"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/sepex_blue"
            app:cornerRadius="12dp"
            app:elevation="4dp"
            app:icon="@drawable/ic_check_circle"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/white"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.Button" />

        <!-- Secondary Action: Navigate again -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNavigateAgain"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Navigate again"
            android:textColor="@color/sepex_blue"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/surface_variant"
            app:cornerRadius="10dp"
            app:strokeColor="@color/sepex_blue"
            app:strokeWidth="1dp"
            app:icon="@drawable/ic_navigation"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/sepex_blue"
            android:layout_marginBottom="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Tertiary Action: Cancel -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Cancel"
            android:textColor="@color/on_surface_variant"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="8dp"
            style="@style/Widget.Material3.Button.TextButton" />

    </LinearLayout>

</LinearLayout>