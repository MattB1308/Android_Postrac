<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="32dp">

    <!-- SEPEX Logo -->
    <ImageView
        android:id="@+id/ivSepexLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="48dp"
        android:contentDescription="@string/content_desc_sepex_logo"
        android:scaleType="centerInside"
        android:src="@drawable/sepex_logo"
        app:layout_constraintBottom_toTopOf="@+id/loadingContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Loading Container -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSepexLogo">

        <!-- Loading Text -->
        <TextView
            android:id="@+id/tvLoadingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/loading_default_message"
            android:textColor="@color/on_background"
            android:textSize="18sp" />

        <!-- Progress Bar -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBarLinear"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:visibility="visible"
            app:indicatorColor="@color/sepex_blue"
            app:trackColor="@color/primary_container"
            app:trackCornerRadius="8dp"
            app:trackThickness="8dp" />

        <!-- Circular Progress (Alternative) -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/progressBarCircular"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:visibility="gone"
            app:indicatorColor="@color/sepex_blue"
            app:indicatorSize="48dp"
            app:trackColor="@color/primary_container"
            app:trackThickness="4dp" />

        <!-- Progress Percentage -->
        <TextView
            android:id="@+id/tvProgressPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="0%"
            android:textColor="@color/on_surface_variant"
            android:textSize="14sp"
            android:visibility="visible" />

        <!-- Secondary Message -->
        <TextView
            android:id="@+id/tvSecondaryMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/loading_secondary_message"
            android:textColor="@color/on_surface_variant"
            android:textSize="14sp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Bottom Branding -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/app_name"
        android:textColor="@color/on_surface_variant"
        android:textSize="12sp"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>